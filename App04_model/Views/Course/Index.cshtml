
@{
    ViewData["Title"] = "RegForm";
}

<div class="row">
    <div class="col-md-3">

    </div>
    <div class="col-md-6">
        <h3 class="alert alert-primary"> Student Registration Form</h3>
        <br />
        <h5 id="msg" class="text-danger">@ViewBag.msg</h5>
        <form asp-action="RegForm" method="post">
            <div class="list-group">
                <span class="list-group-item">Name of Student</span>
                <input type="text" class="form-control"name="stdname"value="@ViewBag.name" />
            
            </div>
            <div class="list-group">
                 <span class="list-group-item">Email Address</span>
                <input type="text" class="form-control" name="stdemail"value="@ViewBag.email" />
            </div>
            <div class="list-group">
                 <span class="list-group-item">Mobile Number</span>
                <input type="text" class="form-control" name="stdmobile"value="@ViewBag.mobile" />
            </div>
            <div class="list-group">
                <br />
                <input type="Submit" class="btn btn-primary"value="Submit"/>
            </div>
        </form>
    </div>
</div>
@section Scripts{
    <script>
        $(document).ready(function (){
            $('#msg').fadeOut(5000);
        })
    </script>
}

